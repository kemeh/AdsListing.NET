@model List<AdsListing.Models.Ad>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h2>All Ads - @Html.ActionLink("Create", "Create", "Ad", null, new { @class = "btn btn-warning" })</h2>
        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Date Created</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var ad in Model.OrderByDescending(d => d.DateCreated))
                    {
                        <tr>
                            <td>@ad.Id</td>
                            <td>@Html.ActionLink(ad.Title, "Details", "Ad", new { @id = ad.Id }, null)</td>
                            <td>@ad.Status</td>
                            <td>@ad.DateCreated</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Ad", new { @id = ad.Id }, null)
                                @Html.ActionLink("Delete", "Delete", "Ad", new { @id = ad.Id }, null)
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
