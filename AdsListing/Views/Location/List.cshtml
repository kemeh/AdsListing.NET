@model List<AdsListing.Models.Location>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h2>All Locations - @Html.ActionLink("Create", "Create", "Location", null, new { @class = "btn btn-warning" })</h2>
        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var location in Model)
                    {
                        <tr>
                            <td>@location.Id</td>
                            <td>@location.Name</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Location", new { @id = location.Id }, null)
                                @Html.ActionLink("Delete", "Delete", "Location", new { @id = location.Id }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
