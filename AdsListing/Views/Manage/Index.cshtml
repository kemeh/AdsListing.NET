@model AdsListing.Models.IndexViewModel
@{
    ViewBag.Title = "User Profile";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>E-mail: </dt>
        <dd>@Model.Email</dd>
        <dt>Full Name:</dt>
        <dd>@Model.FullName</dd>
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change my password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        <dt>My Ads:</dt>
        <dd>
            @foreach (var ad in @Model.UserAds)
            {
                <div class="col-sm-6 col-md-2">
                    <div class="thumbnail">
                        @if (ad.Photos.Any())
                        {
                        <a href="/Ad/Details/@ad.Id"><img src="@ad.Photos.First().ThumbPath" alt="Missing Image" /></a>
                        }
                        else
                        {
                        <a href="/Ad/Details/@ad.Id"><img src="/Content/Images/no_image-Thumb.jpg" alt="Missing Image" href="/Ad/Details/@ad.Id" /></a>
                        }
                        <div class="caption">
                            <a href="/Ad/Details/@ad.Id">@ad.Title</a>

                            <p>@ad.Location.Name</p>
                            <h4>$@ad.Price</h4>
                            <p>@ad.Status</p>
                            @Html.ActionLink("Edit", "Edit", "Ad", new { @id = ad.Id }, new { @class = "btn btn-success btn-xs"})
                            @Html.ActionLink("Delete", "Delete", "Ad", new { @id = ad.Id }, new { @class = "btn btn-danger btn-xs" })                            
                        </div>
                    </div>
                </div>
            }

        </dd>
